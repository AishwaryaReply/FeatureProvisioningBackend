{
    "$schema": "http://json-schema.org/draft-07/schema",
    "description": "schema to validate the DFX token event",
    "type": "object",
    "properties": {
        "headers": {
            "type": "object",
            "properties": {
                "x-device-id": {
                    "type": "string"
                },
                "x-originator-type": {
                    "type": "string"
                },
                "clientrequestid": {
                    "type": "string"
                },
                "x-clientapp-name": {
                    "type": "string"
                },
                "x-clientapp-version": {
                    "type": "string"
                },
                "locale": {
                    "type": "string"
                },
			    "content-type": {
                    "type": "string",
                    "pattern": "^(application\/json)(.*)?$"
                }
            },
            "required": [
                "clientrequestid",
                "x-originator-type",
				"x-clientapp-version",
				"content-type"
            ]
        },
        "queryString": {
            "type": "object",
            "properties": {
                "hintdealer": {
                    "type": "string"
                }
            },
            "required": [
                "hintdealer"
            ]
        }
    },
    "required": [
        "headers",
        "queryString"
    ]
}