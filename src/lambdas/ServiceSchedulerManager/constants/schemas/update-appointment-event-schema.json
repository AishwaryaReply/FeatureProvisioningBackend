{
    "$schema": "http://json-schema.org/draft-07/schema",
    "description": "schema to validate the update appointment event",
    "definitions": {
        "Service": {
            "type": "object",
            "properties": {
                "id": {
                    "type":"number"
                },
                "comment": {
                    "type":"string"
                }
            },
            "required":[
                "id",
                "comment"
            ]
        },
        "Customer": {
            "type": "object",
            "properties": {
                "firstName": {
                    "type": "string"
                },
                "lastName": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "phone": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                }
            }
        },
        "Services": {
            "type": "object",
            "properties": {
                "drs": {
                    "type":"array",
                    "items": {
                        "$ref": "#/definitions/Service"
                    }
                },
                "frs": {
                    "type":"array",
                    "items": {
                        "$ref": "#/definitions/Service"
                    }
                },
                "repair": {
                    "type":"array",
                    "items": {
                        "$ref": "#/definitions/Service"
                    }
                }
            }
        },
        "Link": {
            "type": "object",
            "properties": {
                "rel" : {
                    "type":"string"
                },
                "href": {
                    "type":"string"
                }
            }
        }
    },
    "type": "object",
    "properties": {
        "headers": {
            "type": "object",
            "properties": {
                "x-device-id": {
                    "type": "string"
                },
                "x-originator-type": {
                    "type": "string"
                },
                "clientrequestid": {
                    "type": "string"
                },
                "x-clientapp-name": {
                    "type": "string"
                },
                "x-clientapp-version": {
                    "type": "string"
                },
                "locale": {
                    "type": "string"
                },
				"dealer-authorization": {
                    "type": "string"
				},
                "content-type": {
                    "type": "string",
                    "pattern": "^(application\/json)(.*)?$"
                }
            },
            "required": [
                "clientrequestid",
                "x-originator-type",
				"dealer-authorization",
				"x-clientapp-version",
				"content-type"
            ]
        },
        "pathParams": {
            "type": "object",
            "properties": {
                "userid": {
                    "type": "string"
                },
                "vin": {
                    "type": "string"
                },
                "departmentid": {
                    "type": "string"
                },
                "appointmentid": {
                    "type": "string"
                }
            },
            "required": [
                "userid",
                "vin",
                "appointmentid",
                "departmentid"
            ]
        },
        "requestBody": {
            "type": "object",
            "properties": {
                "customer": {
                    "$ref": "#/definitions/Customer"
                },
                "customerConcernsInfo": {
                    "type": ["string", "null"]
                },
                "advisorId": {
                    "type": ["number","null"]
                },
                "transportationOptionCode": {
                    "type": "string"
                },
                "scheduledTime": {
                    "type": "number"
                },
                "mileage": {
					"type":"object",
					"properties": {
						"value" : {
							"type":"number"
						},
						"unitsKind" : {
							"type":"string"
						}
					}
                },
                "services": {
                    "$ref": "#/definitions/Services"
                }
            },
            "required": [
				"customer",
				"transportationOptionCode",
				"scheduledTime",
				"mileage",
				"services"
            ]
        }
    },
    "required": [
        "headers",
        "pathParams",
		"requestBody"
    ]
}